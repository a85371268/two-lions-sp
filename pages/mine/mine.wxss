/* pages/mine/mine.wxss */
page{
  background: #F3F3F3;
}
.tl-mine-top{
  height: 200rpx;
  background: #FDE25C;
  position: relative;
}
.top-bgbox{
  position: absolute;
  background: white;
  top: 40%;
  width: 90%;
  height: 320rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  border-radius: 16rpx;
  box-shadow:0px 5px 22px rgba(204, 204,204, 0.6);
}
.top-bgbox .top-bgbox-title{
  width: 160rpx;
  height: 160rpx;
  background: white;
  position: absolute;
  left: 50%;
  transform: translate3d(-50%,-50%,0);
  border-radius: 50%;
}
.top-bgbox-title image{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}
.user-name{
  display: inline-block;
  width: 100%;
  text-align: center;
  padding-top: 80rpx;
  color: #462810;
  font-size: 32rpx;
}
.top-bgbox-links{
  width: 100%;
  position: absolute;
  bottom: 35rpx;
  display: flex;
  justify-content: space-around;
}
.top-bgbox-links .links-item{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.top-bgbox-links .links-item image{
  width: 50rpx;
  height: 50rpx;
}
.top-bgbox-links .links-item text{
  font-size: 26rpx;
  margin-top: 20rpx;
  color: #462810;
}
.null-box{
  height: 230rpx;
}
.tl-mine-middle{
  background: white;
  height: 100rpx;
  padding-left: 5%;
  padding-right: 5%;
  display: flex;
  justify-content: space-between;
  line-height: 100rpx;
  border-bottom: 2rpx solid #bebebe;
  font-size: 28rpx;
  color: #462810;
}
.tl-mine-bottom{
  background: white;
  margin-top: 20rpx;
  font-size: 28rpx;
}
.tl-mine-bottom .weui-cell{
  height: 50rpx;
  color: #462810;
}

.shouquan{
  background: #FDE25C;
  margin-top: 30rpx;
}