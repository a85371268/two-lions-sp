    <view class='items'>蓝牙耳机</view>
  </view>
</view>
<view class='hotList'>
  <view class='title'>
    <text>热门搜索</text>
  </view>
  <view calss="items-wrapper">
    <view class='items' wx:for="{{hotList}}" wx:item="{{item}}" catchtap='searchOne'>{{item}}</view>
  </view>
</view>
